 html {
  overflow-y:scroll;
 }
#sortable {
  float: left;
  width: 100%;
  margin: border 1px black;
}
#sortable li {
  list-style-type: none;
  float: left;
  margin: 0 5px 5px 5px;
  padding: 5px;
  width: 100px;
}
.topmargin {
  margin-top: 50px;
}
.small-avatar {
  margin-right: 10px;
  margin-top: 10px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
}
.name {
  white-space: nowrap;
}
.imgHover {
  display: inline;
  position: relative;
}
.imgHover .hover {
  position: absolute;
  bottom: 0px;
  z-index: 2;
  width: 100%;
  background-color: black;
  padding: 10px;
}
.about {
  min-height: 500px;
}

.bottomnav {
  margin-top: 8px;
}
.copyright {
  text-align: center;
  border-bottom: 1px solid #ddd;
  margin-left: 180px;
  margin-right: 180px;
}
.copyright h1 {
  display: inline-block;
  font-size: 12px;
  top: 30px;
  letter-spacing:0px;
  color: #bbb;
  font-weight: 400;
  margin-top: 2em;
  position: relative;
  padding: 0 22px;
  background: #efefef url(<%= asset_path "background.png" %>) repeat top center;
}
.available_sizes td {
  background-color: #fff;
}
.thumbs_link {
  font-size: 14px;
  margin-bottom: 1em;
  padding-top: 5px;
}
.thumbs_link a {
  color: #aaa;
  margin-left: 15px;
}
.thumbs_link a:hover {
  text-decoration: none;
  color: #666;
}
.thumbs {
  float: left;
  width: 100%;
  margin: 0px;
}
.thumbs li {
  list-style-type: none;
  float: left;
  margin: 0 5px 5px 0;
  padding: 5px;
  width: 145px;
}
.thumbs_info {
  top: 0px;
  left: 0xp;
}
.thumbs_inner {
  position: absolute;
  top: 0px;
  left: 0px;
  width: 140px;
  height: 140px;
}
.thumbs_outer {
  position: relative;
  width: 140px;
  height: 140px;
}
.thumbs_info {
  font-size: 16px;
  color: white;
  position: absolute;
  bottom: 0px;

  position: absolute;
  left: 0px;
  width: 140px;
  opacity: 1.0;

  vertical-align: text-bottom;
  display: none;
  text-shadow: 0px 0px white;
  pointer-events:none;
}
.thumbs_background {
  background-color: #000;
  opacity: 0.55;
  width: 140px;
  display: none;
  pointer-events:none;
}
.thumbs_text {
  position: absolute;
  bottom: 2px;
  left: 2px;
  pointer-events:none;
  text-align: left;
}
#story_description {
  text-align: left;
}
#purchase_link img {
  opacity: 0.28;
  margin-top: -2px;
}
.purchase {
  width: 500px;
  margin: auto;
  margin-top: 2em;
}
.borderless {
  border-left: solid 0px #ccc !important;
  text-align: right !important;
}
.table-cart td {
  vertical-align: middle !important;
  padding: 12px 18px 12px 18px !important;
}
.tableimg {
  text-align: center !important;
  margin: auto;
}
.delivery {
  margin-top: 2em;
}

#sortable {
  float: left;
  width: 100%;
  margin: border 1px black;
}
#sortable li {
  list-style-type: none;
  float: left;
  margin: 0 5px 5px 5px;
  padding: 5px;
  width: 100px;
}
.topmargin {
  margin-top: 50px;
}
.small-avatar {
  margin-right: 10px;
  margin-top: 10px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
}
.name {
  white-space: nowrap;
}
.imgHover {
  display: inline;
  position: relative;
}
.imgHover .hover {
  position: absolute;
  bottom: 0px;
  z-index: 2;
  width: 100%;
  background-color: black;
  padding: 10px;
}
.flex-caption {
  color: #fff;
  font-size: 16px;
  opacity: 0.5;
  background-color: #333;
  padding-top: 10px;
  padding-bottom: 10px;
  position: absolute;
  bottom: -8px;
  width: 100%;
  text-align: left;
}
.flex-caption a {
  color: #fff;
  text-shadow: 0px 0px #ddd;
}
.flex-caption a:hover {
  text-decoration: none;
  color: #fff;
}
.about {
  min-height: 500px;
}


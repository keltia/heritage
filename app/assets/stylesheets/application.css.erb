.navigationleft {
  left: auto;
  right: 35px;
  display: block;
  width: 30px;
  background: url(<%= asset_path "arrows.png" %>) no-repeat;
  background-position: -60% 50%;
  border: 0;
  top: auto;
  bottom: -36px;
  height: 30px;
}
.navigationright {
  right: 0px;
  display: block;
  width: 30px;
  background: url(<%= asset_path "arrows.png" %>) no-repeat;
  background-position: 160% 50%;
  border: 0;
  top: -30px;
  left: 30px;
  bottom: -36px;
  height: 30px;
  position: relative;
}
.navigation {
  width: 60px;
  height: 30px;
}
.bottomnav {
  margin-top: 8px;
}
.copyright {
  text-align: center;
  border-bottom: 1px solid #ddd;
  margin-left: 180px;
  margin-right: 180px;
  opacity: 0.9;
}
.copyright h1 {
  display: inline-block;
  font-size: 12px;
  top: 30px;
  letter-spacing:0px;
  color: #bbb;
  font-weight: 200;
  margin-top: 2em;
  text-shadow: 1px 1px #ddd;
  position: relative;
  padding: 0 22px;
  background: #efefef url(<%= asset_path "background.png" %>) repeat top center;
}

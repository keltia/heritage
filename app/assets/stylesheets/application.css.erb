 html {
  overflow-y:scroll;
 }
#sortable {
  float: left;
  width: 100%;
  margin: border 1px black;
}
#sortable li {
  list-style-type: none;
  float: left;
  margin: 0 5px 5px 5px;
  padding: 5px;
  width: 100px;
}
.topmargin {
  margin-top: 50px;
}
.small-avatar {
  margin-right: 10px;
  margin-top: 10px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
}
.name {
  white-space: nowrap;
}
.imgHover {
  display: inline;
  position: relative;
}
.imgHover .hover {
  position: absolute;
  bottom: 0px;
  z-index: 2;
  width: 100%;
  background-color: black;
  padding: 10px;
}
.flex-caption {
  color: #fff;
  font-size: 16px;
  opacity: 0.5;
  background-color: #333;
  padding-top: 10px;
  padding-bottom: 10px;
  position: absolute;
  bottom: -8px;
  width: 100%;
  text-align: left;
}
.flex-caption a {
  color: #fff;
  text-shadow: 0px 0px #ddd;
}
.flex-caption a:hover {
  text-decoration: none;
  color: #fff;
}
.about {
  min-height: 500px;
}

.bottomnav {
  margin-top: 8px;
}
.copyright {
  text-align: center;
  border-bottom: 1px solid #ddd;
  margin-left: 180px;
  margin-right: 180px;
}
.copyright h1 {
  display: inline-block;
  font-size: 12px;
  top: 30px;
  letter-spacing:0px;
  color: #bbb;
  font-weight: 400;
  margin-top: 2em;
  position: relative;
  padding: 0 22px;
  background: #efefef url(<%= asset_path "background.png" %>) repeat top center;
}
.available_sizes td {
  background-color: #fff;
}
.thumbs_link {
  font-size: 14px;
  margin-bottom: 1em;
  padding-top: 5px;
}
.thumbs_link a {
  color: #aaa;
  margin-left: 15px;
}
.thumbs_link a:hover {
  text-decoration: none;
  color: #666;
}
.thumbs {
  float: left;
  width: 100%;
  margin: 0px;
}
.thumbs li {
  list-style-type: none;
  float: left;
  margin: 0 5px 5px 0;
  padding: 5px;
  width: 145px;
}
.thumbs ul {
}

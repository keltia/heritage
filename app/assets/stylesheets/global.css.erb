  font-weight: normal;
  font-size: 34px;
  line-height: 1.0em;
  letter-spacing: -1px;
}
.about img {
  margin-left: 40px;
  margin-bottom: 40px;
  background-color: white;
  margin: 1px solid #C3D5E3;
  padding: 10px;
}
#newsletter_modal p {
  line-height: 1.2em;
}
#photos_counter {
	font-size: 14px;	
	color: #666;
  padding-left: 5px;
  padding-top: 5px;
}
#story_description {
	font-size: 14px;	
	color: #666;
	padding: 10px;
}
#story_description h3 {
  font-family: 'Titillium Web', sans-serif;
  font-weight: 200;
  font-style: normal;
  font-weight: bold;
  line-height: 30px;

/*
	Page style
*/

body { 
	/*font:normal 62.5%/1.5 Helvetica, Arial, sans-serif;
   */
	letter-spacing:0;
	color:#434343;
	background:#efefef url(<%= asset_path "background.png" %>) repeat top center;
	padding:20px 0;
	position:relative;
	text-shadow:0 1px 0 rgba(255,255,255,.8);
	-webkit-font-smoothing: subpixel-antialiased;
}

#container {
  width: <%= Photo::RESIZE_TO_FIT.first %>px;
	padding:10px;
	margin:0 auto;
	position:relative;
	z-index:0;
}

#example {
	width:830px;
	position:relative;
}

#ribbon {
	position:absolute;
	top:-3px;
	left:-15px;
	z-index:500;
}

#frame {
	position:absolute;
	z-index:0;
	width:739px;
	height:341px;
	top:-3px;
	left:-80px;
}

#footer {
	text-align:center;
	width:810px;
	margin-top:9px;
	padding:4.5px 0 18px;
	border-top:1px solid #dfdfdf;
}

#footer p {
	margin:4.5px 0;
	font-size:1.0em;
}


<% if @story.photos.any? %>
 <%= content_for :facebook_meta do %>
	<meta property="og:url" content="<%= story_url(@story) %>" />
	<meta property="og:image" content="<%= full_image_link @story.photos.first.image_url(:web) %>" />
	<meta property="og:title" content="<%= @story.photos.first.title || @story.title %>" />
	<meta property="og:site_name" content="<%= @story.user.name %>"/>
 <% end %>
<% end %>
<%= content_for :head_script do %>
	<script type="text/javascript">
		$(document).ready(function() {
      var slider = $('.carousel').carousel('pause')
        .bind('slid', function() {
        var index = $(this).find(".active").index();
        $('#photos_index').html(index + 1);
      });

      jQuery(document).bind('keyup', function(e) {
        if(e.which==39){
          jQuery('a.navigationright').trigger('click');
        } else if(e.which==37){
          jQuery('a.navigationleft').trigger('click');
        }
      });
		});
	</script>
<% end %>

<div id="story">
<% if @story.photos.any? %>

    <div id="myCarousel" class="carousel slide" style="height: <%= @story.max_photo_height(800) %>px">

    <div class="carousel-inner">
      <% @story.photos.each_with_index do |photo,i| %>
      <% @photo_index = (i+1) if @photo == photo %>
      <div class="item <%= 'active' if @photo == photo %>">
        <%= link_to(image_tag(photo.image_url(:web), :width => 800, :height => photo.photo_dimension.last),
        "#myCarousel", 'data-slide' => 'next', :class => "") %>

        <div class="carousel-caption">
          <p>
          <a href="http://www.google.com">Purchase</a>
          <a href="http://www.google.com">Share</a>
          <%= link_to "Direct Link", story_photo_url(@story, photo.permalink || photo.id) %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="bottomnav">
    <div class="pull-right navigation">
      <a class="navigationleft" href="#myCarousel" data-slide="prev"></a>
      <a class="navigationright" href="#myCarousel" data-slide="next"></a>
    </div>
    <div id="photos_counter">
      <span id="photos_index"><%= @photo_index %></span>/<%= @story.photos.count %>
    </div>
    <div class="clearfix"></div>
  </div>

  <div id="story_description">
    <h3><%= @story.title %></h3>
    <%= @story.description %>
  </div>

<% end %>
</div>
